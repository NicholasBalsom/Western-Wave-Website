---
interface Props {
  title?: string
  subtitle?: string
  showHomeLink?: boolean
}
const { title = 'Page Under Construction', subtitle = "We're working on something awesome â€” check back soon!", showHomeLink = true } = Astro.props as Props
---

<!-- Have this in pages that are not done yet -->
<section class="min-h-full bg-gradient-to-b from-blue-50 via-white to-white flex items-center justify-center w-full">
  <div class="w-full max-w-3xl px-6 py-12">
    <section class="bg-white/90 backdrop-blur-md rounded-2xl shadow-xl border border-blue-100 overflow-hidden">
      <div class="p-8 md:p-12 flex flex-col md:flex-row items-center gap-8">

        <!-- Illustration / Icon -->
        <div class="flex-shrink-0 flex items-center justify-center w-40 h-40 rounded-xl bg-gradient-to-br from-blue-500 to-blue-600 text-white shadow-lg">
          <div class="relative w-24 h-24">
            <svg viewBox="0 0 64 64" class="absolute inset-0 w-full h-full -translate-y-1 animate-spin-slow" aria-hidden>
              <g fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M32 18v-4" />
                <path d="M32 50v4" />
                <path d="M18 32h-4" />
                <path d="M50 32h4" />
                <path d="M22.6 22.6l-2.8-2.8" />
                <path d="M44.2 44.2l2.8 2.8" />
                <path d="M22.6 41.4l-2.8 2.8" />
                <path d="M44.2 19.8l2.8-2.8" />
                <circle cx="32" cy="32" r="8" />
              </g>
            </svg>
            <svg viewBox="0 0 24 24" class="absolute bottom-0 right-0 w-9 h-9 rotate-6" aria-hidden>
              <path d="M2 20h20L12 4 2 20z" fill="white" />
              <path d="M11 14h2v2h-2zM11 10h2v2h-2z" fill="#1E40AF" />
            </svg>
          </div>
        </div>

        <!-- Content -->
        <div class="flex-1 text-center md:text-left">
          <h1 class="text-3xl md:text-4xl font-extrabold text-blue-900">{title}</h1>
          <p class="mt-3 text-blue-700/90 text-lg">{subtitle}</p>

          <div class="mt-6 flex flex-col sm:flex-row sm:items-center sm:gap-4 gap-3 justify-center md:justify-start">
            <a class="inline-flex items-center justify-center px-5 py-3 border border-transparent rounded-lg font-medium shadow-sm bg-blue-600 text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-300" href="#">
              Notify me
            </a>
            {showHomeLink ? (
              <a class="inline-flex items-center justify-center px-5 py-3 rounded-lg font-medium border border-blue-200 text-blue-700 bg-white hover:bg-blue-50" href="/">
                Back to Home
              </a>
            ) : null}
          </div>

          <div class="mt-6 text-sm text-blue-500/80">
            <p>Need immediate help? Contact <a href="mailto:hello@example.com" class="underline">hello@example.com</a></p>
          </div>
        </div>
      </div>
      <div class="h-2 bg-gradient-to-r from-blue-100 via-white to-blue-100"></div>
    </section>
  </div>
  <style>
    @keyframes spin-slow { from { transform: rotate(0deg) } to { transform: rotate(360deg) } }
    .animate-spin-slow { animation: spin-slow 8s linear infinite; }
  </style>
</section>

