---
import type { HeroProps } from "@types";
type Props = HeroProps;

const { team, img} = Astro.props;
---

<section class="text-black font-serif" id="#hero">
  <div class="relative flex flex-col items-center max-w-screen-xl px-8 mx-auto md:flex-row sm:px-6 p-8">
    <div class="flex items-center py-5 md:w-1/2 md:pb-20 md:pt-10 md:pr-10">
      <div class="text-left">
        <h1 class="leading-10 font-bold tracking-tightest text-5xl sm:text-6xl sm:leading-none md:text-7xl lg:text-8xl">
          {team}
        </h1>
        <p class="max-w-md mx-auto mt-3 text-base text-gray-500 sm:text-lg md:mt-5 md:text-xl md:max-w-3xl">
          Memorial University x College of the North Atlantic Student Team
        </p>
        
      </div>
    </div>

    <div class="flex items-center py-5 md:w-1/2 md:pb-20 md:pt-10 md:pl-10">
      <div class="relative w-full p-3 rounded  md:p-8">
        <div class="rounded-lg bg-white text-black w-full"> 
          <img src={img} alt="team photo">
        </div>
      </div>
    </div>

  </div>

</section>
